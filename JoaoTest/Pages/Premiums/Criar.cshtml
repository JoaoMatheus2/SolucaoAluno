            </div>
            <div class="form-group">
                <label asp-for="Premium.EstudanteId" class="control-label"></label>
                <select asp-for="Premium.EstudanteId" class ="form-control" asp-items="ViewBag.EstudanteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
