@page
@model JoaoTest.Pages_Premiums.EditarModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Premium</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Premium.Id" />
            <div class="form-group">
                <label asp-for="Premium.Titulo" class="control-label"></label>
                <input asp-for="Premium.Titulo" class="form-control" />
                <span asp-validation-for="Premium.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Premium.Inicio" class="control-label"></label>
                <input asp-for="Premium.Inicio" class="form-control" />
                <span asp-validation-for="Premium.Inicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Premium.Final" class="control-label"></label>
                <input asp-for="Premium.Final" class="form-control" />
                <span asp-validation-for="Premium.Final" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Premium.EstudanteId" class="control-label"></label>
                <select asp-for="Premium.EstudanteId" class="form-control" asp-items="ViewBag.EstudanteId"></select>
                <span asp-validation-for="Premium.EstudanteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
