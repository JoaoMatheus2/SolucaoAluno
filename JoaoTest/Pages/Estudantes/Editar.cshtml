@page
@model JoaoTest.Pages_Estudantes.EditarModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Estudante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Estudante.Id" />
            <div class="form-group">
                <label asp-for="Estudante.Nome" class="control-label"></label>
                <input asp-for="Estudante.Nome" class="form-control" />
                <span asp-validation-for="Estudante.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudante.Email" class="control-label"></label>
                <input asp-for="Estudante.Email" class="form-control" />
                <span asp-validation-for="Estudante.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

